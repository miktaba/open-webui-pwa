# Main settings
OPENWEBUI_URL=http://open-webui:8080  # Open WebUI internal URL
PWA_PORT=3001                        # PWA client port
NODE_ENV=production                  # Environment mode

# Security settings
CORS_ENABLED=true                    # Enable CORS
CORS_ORIGINS=*                       # Allow all origins for testing
AUTH_STORAGE_KEY=openwebui_api_key  # LocalStorage key for API key

# API settings
API_TIMEOUT=30000                    # Request timeout (ms)
API_RETRY_ATTEMPTS=3                 # Number of retry attempts
API_VERSION=v1                       # API version
API_URL=http://your-api-url
API_KEY=your-api-key
API_RATE_LIMIT=100                   # Requests per minute
API_SECRET_KEY=your-secret-key       # For JWT tokens
SSL_ENABLED=true                     # Enable HTTPS
SESSION_TIMEOUT=3600                 # Session timeout in seconds

# Chat settings
CHAT_TEMPERATURE=0.7                # Response randomness (0-1)
CHAT_MAX_TOKENS=2048               # Max response length
CHAT_DEFAULT_MODEL=default         # Default model name

# Storage settings
DB_NAME=openWebUIDB                  # Database name
DB_VERSION=3                         # Database version updated

# Cache settings
CACHE_ENABLED=true                   # Enable caching
CACHE_VERSION=1                      # Cache version

# PWA settings
PWA_NAME="Open WebUI"               # Full app name
PWA_SHORT_NAME="OpenUI"             # Short name
PWA_THEME_COLOR="#2196f3"           # Theme color
PWA_BACKGROUND_COLOR="#ffffff"       # Background color 

# Docker settings
DOCKER_NETWORK=openwebui-network     # Docker network name
OPEN_WEBUI_CONTAINER=open-webui      # Open WebUI container name
PWA_CONTAINER=openwebui-pwa         # PWA container name 

# Version settings
APP_VERSION=1.0.0                    # Application version
DB_VERSION=3                         # Database version
CACHE_VERSION=1                      # Cache version 

# Error handling
ERROR_LOGGING=true                   # Enable error logging
ERROR_REPORTING_EMAIL=admin@example.com 